<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <% @article.each do |article| %>
      <h2><%= link_to("#{article.title}", "http://localhost:3000/articles/"+"#{article.id}") %></h2>
      <p> <%= article.content %> </p>
      <hr />
    <% end %>
  </div>
</div>

